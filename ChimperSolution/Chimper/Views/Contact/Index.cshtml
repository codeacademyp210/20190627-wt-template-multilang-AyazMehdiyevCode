
@{
    ViewBag.Title = Chimper.Resources.Resource.Contact;
}
@using Chimper.Resources
@RenderPage("~/Views/Shared/_Cover.cshtml")
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-7 mb-5">
                <form action="#" class="p-5 bg-white">
                    <h2 class="h4 text-black mb-5">@Resource.Contact_Form</h2>
                    <div class="row form-group">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="text-black" for="fname">@Resource.First_Name</label>
                            <input type="text" id="fname" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="text-black" for="lname">@Resource.Last_Name</label>
                            <input type="text" id="lname" class="form-control">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="text-black" for="email">@Resource.Email</label>
                            <input type="email" id="email" class="form-control">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="text-black" for="subject">@Resource.Subject</label>
                            <input type="@Html.Raw("subject")" id="subject" class="form-control">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="text-black" for="message">@Resource.Message</label>
<textarea name="message" id="message" cols="30" rows="7" class="form-control" placeholder="@Resource.Write_your_notes_or_questions_here___..."></textarea>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" value="@Resource.Send_Message" class="btn btn-primary btn-md text-white">
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-5">
                <div class="p-4 mb-3 bg-white">
                    <p class="mb-0 font-weight-bold">@Resource.Address</p>
                    <p class="mb-4">203 Fake St. Mountain View, San Francisco, California, USA</p>
                    <p class="mb-0 font-weight-bold">@Resource.Phone</p>
                    <p class="mb-4"><a href="#">+1 232 3235 324</a></p>
                    <p class="mb-0 font-weight-bold">@Resource.Email_Address</p>
                    <p class="mb-0"><a href="#"><span>user@@code.edu.az</span></a></p>
                </div>
                <div class="p-4 mb-3 bg-white">
                    <h3 class="h5 text-black mb-3">@Resource.More_Info</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsa ad iure porro mollitia architecto hic consequuntur. Distinctio nisi perferendis dolore, ipsa consectetur? Fugiat quaerat eos qui, libero neque sed nulla.</p>
                    <p><a href="#" class="btn btn-primary btn-md text-white">@Resource.Learn_More</a></p>
                </div>
            </div>
        </div>
    </div>
</div>